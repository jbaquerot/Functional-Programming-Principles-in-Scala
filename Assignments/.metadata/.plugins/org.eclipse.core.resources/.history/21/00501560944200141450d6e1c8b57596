package week2

object Week2 {
 def sum(f: Int => Int, a: Int, b: Int): Int ={
 		def sumF(a: Int, b:Int): Int =
 			if (a > b) 0
 			else f(a) + sumF(a+1, b)
 		sumF
 }
 sum( x => x, 1, 10)
 
 def prod(f: Int => Int, a: Int, b: Int): Int =
 		if (a > b) 1
 		else f(a) * prod(f, a+1, b)
 		
 def fact(n: Int) = prod(x => x, 1, n)
 
 fact(5)
}