package week2

object Week2 {
 def sum(f: Int => Int): (Int, Int) => Int = {
 		def sumF(a: Int, b: Int): Int =
 			if (a > b) 0
 			else f(a) + sumF(a+1, b)
 		sumF
 }
 
 sum1( x => x*x)( 1, 10)
 
 def sum2(f: Int => Int)(a:Int, b: Int): Int =
 		if (a > b) 0 else f(a) + sum2(f)(a + 1, b)
 
 sum2( x => x*x)( 1, 10)
 
 def prod(f: Int => Int, a: Int, b: Int): Int =
 		if (a > b) 1
 		else f(a) * prod(f, a+1, b)
 		
 def fact(n: Int) = prod(x => x, 1, n)
 
 fact(5)
}