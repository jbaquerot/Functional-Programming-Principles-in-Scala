package week4
import week4._
object lesson3 {
  println("Welcome to the Scala worksheet")
  def nth[T](n: Int, xs: List[T]): T = {
  	if (xs.isEmpty) throw new IndexOutOfBoundException
		if (n == 0) xs.head
		else nth(n-1, xs.tail)

  }
  
  val list = new Cons(1, new Cons(2, new Cons(3, new Nil)))
  
  nth(0, list)
  nth(-1, list)
}